{
  "name": "@http/core",
  "version": "0.1.0",
  "description": "HTTP Client Library",

  "keywords": [
    "http",
    "https",
    "client",
    "request"
  ],

  "license": "Apache-2.0",
  "homepage": "https://github.com/node-http/core",

  "author": "Simeon Velichkov <simeonvelichkov@gmail.com> (http://simov.github.io)",

  "repository": {
    "type": "git",
    "url": "https://github.com/node-http/core.git"
  },

  "dependencies": {
    "@http/headers"   : "0.1.0",
    "@http/length"    : "0.1.0",
    "@http/qs"        : "0.1.0",
    "deep-copy"       : "1.1.0",
    "mime-types"      : "2.1.7",
    "bl"              : "1.0.0",
    "isstream"        : "0.1.2",
    "json-stringify-safe": "5.0.1"
  },

  "devDependencies": {
    "mocha"           : "2.3.3",
    "should"          : "7.1.0",

    "http-auth"       : "2.2.8",
    "hawk"            : "4.0.0",
    "http-signature"  : "1.0.2",
    "oauth-sign"      : "0.8.0",
    "aws-sign2"       : "0.6.0",
    "formidable"      : "1.0.17",
    "tough-cookie"    : "2.2.0",
    "iconv-lite"      : "0.4.13"
  },

  "main": "index.js",

  "files": [
    "config/",
    "lib/",
    "LICENSE",
    "README.md",
    "index.js"
  ],

  "scripts": {
    "test"      : "npm run lint && npm run test-ci",
    "test-ci"   : "mocha --recursive test/",
    "test-cov"  : "istanbul cover _mocha test/",
    "lint"      : "eslint . && echo Lint passed"
  }
}
